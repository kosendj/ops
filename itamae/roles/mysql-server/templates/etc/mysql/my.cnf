# based on kamipo my.cnf
[client]
port = 3306
socket = /var/run/mysqld/mysqld.sock

[mysql]
prompt = '\\u@\\h [\\d] > '
default_character_set = utf8mb4
safe_updates
show_warnings
connect_timeout = 5

[mysqld]
port = 3306
bind-address = 0.0.0.0
socket = /var/run/mysqld/mysqld.sock
#datadir = /data
#tmpdir = /tmp
character_set_server = utf8mb4
lower_case_table_names = 1
skip_name_resolve
skip_external_locking
default_storage_engine = InnoDB
transaction_isolation = READ-COMMITTED

#core_file
#read_only

sql_mode = TRADITIONAL,NO_AUTO_VALUE_ON_ZERO,ONLY_FULL_GROUP_BY

## network
max_allowed_packet = 16M
max_connections = 1000
max_connect_errors = 10000
wait_timeout = 60
slave_net_timeout = 60

## cache size
table_open_cache = 2000
thread_cache_size = 100
query_cache_type = 0
query_cache_size = 0
binlog_cache_size = 16M
max_heap_table_size = 64M
tmp_table_size = 64M

## log
log_error = mysql-error.log
#general_log = 1
#general_log_file = mysql.log

## binary log
server_id = <%= node[:mysqld][:server_id] %>
log_bin = mysql-bin
log_slave_updates
max_binlog_size = 512M
binlog_format = ROW
expire_logs_days = 10
sync_binlog = 1
relay_log = mysql-relay-bin
report_host = <%= node[:hostname] %>

## slow query log
slow_query_log
slow_query_log_file = mysql-slow.log
log_slow_admin_statements
log_slow_slave_statements
long_query_time = 0.1

## innodb
innodb_strict_mode
innodb_buffer_pool_size = 1G
innodb_data_file_path = ibdata1:10M:autoextend
innodb_log_buffer_size = 16M
innodb_log_file_size = 512M
innodb_doublewrite = 0
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_lock_wait_timeout = 5
innodb_support_xa = 1
innodb_autoinc_lock_mode = 2
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT
innodb_file_per_table
innodb_file_format = Barracuda
innodb_print_all_deadlocks
innodb_large_prefix

loose_performance_schema = OFF
loose_explicit_defaults_for_timestamp
loose_table_open_cache_instances = 8

## Replication with GTIDs
log_bin = mysql-bin
log_slave_updates

enforce_gtid_consistency
gtid_mode = ON

## binary log
loose_master_info_repository = table
loose_relay_log_info_repository = table
loose_sync_master_info = 1
loose_sync_relay_log_info = 1
loose_sync_relay_log = 1
loose_relay_log_recovery = 1
loose_binlog_row_image = minimal

## slow query log
loose_log_queries_not_using_indexes
loose_log_throttle_queries_not_using_indexes = 10

## innodb
loose_innodb_buffer_pool_dump_at_shutdown = 1
loose_innodb_buffer_pool_load_at_startup = 1
loose_innodb_monitor_enable = all

# performance_schema
performance_schema = ON
performance_schema_instrument = '%=off'
#performance_schema_instrument = 'stage/%=on'

#innodb_temp_data_file_path = ibtmp1:12M:autoextend
#internal_tmp_disk_storage_engine = MyISAM

## innodb for ssd
innodb_flush_neighbors = 0
innodb_random_read_ahead = 0
innodb_read_ahead_threshold = 0
innodb_io_capacity = 2000
innodb_io_capacity_max = 2000
innodb_lru_scan_depth = 2000
